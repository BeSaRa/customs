{
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "singleQuote": true,
        "endOfLine": "lf",
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "trailingComma": "es5",
        "bracketSameLine": false,
        "printWidth": 150
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "angular",
        "printWidth": 120,
        "bracketSameLine": true,
        "endOfLine": "lf"
      }
    }
  ]
}
